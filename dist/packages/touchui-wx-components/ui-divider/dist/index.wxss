.ui-divider {
  display: table;
  white-space: nowrap;
  height: auto;
  overflow: hidden;
  line-height: 1;
  text-align: center;
  padding: 10px 0;
  color: #999;
}
.ui-divider .ui-divider-content {
  padding: 0 5px;
}
.ui-divider .holder {
  content: "";
  display: table-cell;
  position: relative;
  transform: translateY(50%);
  width: 50%;
}
.ui-divider .holder .line {
  position: absolute;
  top: 0;
  left: 0;
  background: #ccc;
  width: 100%;
  height: 1px;
  transform: scaleY(0.33);
  transform-origin: 0 0;
}
